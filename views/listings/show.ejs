<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
    <div class="col-8 offset-3">
    <h3>Listing Details</h3>
    </div>
    <div class="card col-6 offset-3 show-card">
        <img src="<%= showListing.image %>" class="card-img-top show-img" alt="listing-image">
        <div class="card-body">
            <p class="card-text">
                <b><%= showListing.title %></b>
                <br>
                <%= showListing.description %>
                <br>
                &#8377;<%= showListing.price.toLocaleString("en-IN") %>
                <br>
                <%= showListing.location %>
                <br>
                <%= showListing.country %>
            </p>
        </div>
    </div>
    
    <br>
    </div>
    <div class="btns">
        <a href="/listings/<%= showListing._id %>/edit" class="btn btn-dark add-btn col-1 offset-3">Edit</a>

        <form method="post" action="/listings/<%= showListing._id %>?_method=DELETE">
           <button class="btn btn-dark offset-5">Delete</button>
        </form>
    </div>
    <br><br>
</body>